#include <avr/io.h>
#include <avr/interrupt.h>
#include <util/delay.h>
void init_timer1();
unsigned char segments[6]={6,9,8,7,6,4};
void display_all();
int main(){
	DDRC |= 0x0F;
	DDRA |= 0b00111111;
	init_timer1();
	while(1){

     display_all();


	}

}


void init_timer1(){
	SREG |= (1<<7);
	TIMSK |= (1<<OCIE1A);
	TCCR1A = (1<<FOC1A);
	TCNT1=0;
	OCR1A=1000;
	TCCR1B= (1<<WGM12) | (1<<CS12) | (1<<CS10);
}



ISR(TIMER1_COMPA_vect){



}





void display_all(){
	for(int i=5;i>=0;i--){
		PORTA |= (1<<i);
		PORTC= (PORTC&0xF0) | (segments[i]&0x0F);
		_delay_us(200);
		PORTA &= ~(1<<i);
	}


}





